package dddd1;

import java.util.Scanner;

public class Ex35 {

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		
		double x,r,i;
		
		System.out.printf("Digite um valor(X): ");
		x = ler.nextDouble();
		
		while(x<=0) {
			System.out.printf("Valor invalido!");
			System.out.printf("\nDigite um valor(X): ");
			x = ler.nextDouble();
		}
		
		for(i = 1; i <= 10; i++) {
			r = x * i;
			System.out.printf("\n%.1f X %.1f = %.1f",x,i,r);
		
		}
	}

}