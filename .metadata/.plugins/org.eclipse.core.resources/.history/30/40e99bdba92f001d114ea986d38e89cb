package dddd1;

import java.util.Scanner;

public class Ex33 {

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		
		char sex;
		
		System.out.printf("Digite seu sexo (M) ou (F): ");
		sex = ler.next().charAt(0);
		
			while((sex != 'M') && (sex != 'F'))
			{
			System.out.printf("Opcao Invalida. Escolha 'M'(masculino) ou 'F'(feminino).\n");
			System.out.printf("Digite o seu sexo(M/F): \n");
			sex = ler.next().charAt(0);
        }
	}

}