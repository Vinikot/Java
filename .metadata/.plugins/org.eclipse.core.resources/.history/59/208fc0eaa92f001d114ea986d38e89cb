package dddd1;

import java.util.Scanner;

public class Ex36 {

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		
		int a,b,x,r,i;
		
		System.out.printf("Digite um valor(X): ");
		x = ler.nextInt();
		
		while(x<=0) {
			System.out.printf("\nValor invalido!");
			System.out.printf("\nDigite um valor(X): ");
			x = ler.nextInt();
		}
		
		System.out.printf("\nDigite um valor(A): ");
		a = ler.nextInt();
		
		System.out.printf("\nDigite um valor(B) que seja maior que (A): ");
		b = ler.nextInt();
		
		while(b<=a) {
			System.out.printf("\nValor invalido!");
			System.out.printf("\nDigite um valor(B) que seja maior que (A): ");
			b = ler.nextInt();
		}
		
		for(i=b; i>=a; i--) {
			r = x * i;
			System.out.printf("\n%d X %d = %d",x,i,r);
		}
	}

}