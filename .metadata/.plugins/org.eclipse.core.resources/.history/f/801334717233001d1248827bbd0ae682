package entrada_processamento_saida;

import java.util.Scanner;

public class Ex45f {

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		
		int i,num,a=0,b=0,n,p=0,p2=0,x=0,x2=0;
		
		System.out.printf("Digite quantos valores(positivos e menor que 20) seram solicitados: ");
		n=ler.nextInt();
		while(n<=0 || n>50) {
			System.out.printf("Valor invalido!");
			System.out.printf("\nDigite quantos valores(positivos e menor que 20) seram solicitados: ");
			n=ler.nextInt();
		}
		
		for (i=1;i<=10;i++) {
			System.out.printf("Digite um valor positivo(n%d): ",i);
			num=ler.nextInt();
			while(num<=0) {
				System.out.printf("Valor invalido!");
				System.out.printf("\nDigite um valor positivo(n%d): ",i);
				num=ler.nextInt();
			}
			//Verifica o maior numero.
		    if(i==1) {
		    	a=num;
		    }else if(num>a){
		    	a=num;
		    }
		    //Faz a soma
		    if(i==1) {
		    	b=num;
		    }else{
		    	b=b+num;
		    }
		}
		System.out.printf("O maior valor é:%d\nA soma dos valores é:%d\nA media aritimetica é:%d",a,b,b/10);
	}

}